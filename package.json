{
  "name": "@iamkenos/fragile",
  "version": "0.1.1",
  "license": "MIT",
  "author": "iamkenos",
  "description": "A mocking framework powered by Express, designed to serve mock HTTP/s responses.",
  "main": "./build/index.js",
  "bin": {
    "fragile": "bin/fragile.js"
  },
  "homepage": "https://github.com/iamkenos/fragile#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/iamkenos/fragile.git"
  },
  "bugs": {
    "url": "https://github.com/iamkenos/fragile/issues"
  },
  "scripts": {
    "start": "npm run build && node bin/fragile",
    "prebuild": "rimraf build && npm run lint -- --fix",
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "run-s postbuild:**",
    "postbuild:cp:types": "shx mkdir -p build/types && shx cp -R ./src/types build",
    "postbuild:cp:resources": "shx cp -R ./src/cli/resources build/cli",
    "postbuild:cp:prettierrc": "shx cp ./.prettierrc build/cli/resources",
    "postbuild:cp:samples": "shx cp -R ./demo build/cli/resources",
    "postbuild:mv:samples": "shx mv ./build/cli/resources/demo ./build/cli/resources/samples",
    "postbuild:mv:tsconfig": "shx mv ./build/cli/resources/tsconfig.tpl.ejs ./build/cli/resources/tsconfig.json",
    "postbuild:rm:clutter": "rimraf ./build/cli/**/{recordings,certs}",
    "demo:serve": "./bin/fragile.js demo/fragile.conf.ts",
    "pack": "npm run build && npm pack",
    "lint": "eslint ./",
    "test": "run-s test:**",
    "test:unit": "jest --config .jestrc.json --coverage",
    "release": "npm run build && node ./.scripts/s_release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "7.13.8",
    "@babel/preset-env": "7.13.9",
    "@babel/register": "7.13.8",
    "@types/express": "4.17.11",
    "@types/express-rate-limit": "5.1.1",
    "body-parser": "1.19.0",
    "body-parser-xml": "2.0.1",
    "chalk": "4.1.0",
    "cors": "2.8.5",
    "ejs": "3.1.6",
    "express": "4.17.1",
    "express-rate-limit": "5.2.6",
    "fs-extra": "9.1.0",
    "http-proxy-middleware": "^1.0.6",
    "inquirer": "8.0.0",
    "lodash.merge": "^4.6.2",
    "loglevel": "1.7.1",
    "loglevel-plugin-prefix": "0.8.4",
    "prettier": "2.2.1",
    "shelljs": "0.8.4",
    "slash": "3.0.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.3",
    "url-pattern": "1.0.3",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@types/body-parser-xml": "1.1.0",
    "@types/cors": "2.8.10",
    "@types/ejs": "^3.0.6",
    "@types/eslint": "7.2.6",
    "@types/fs-extra": "9.0.8",
    "@types/glob": "7.1.3",
    "@types/inquirer": "7.3.1",
    "@types/jest": "26.0.20",
    "@types/lodash": "4.14.168",
    "@types/lodash.merge": "^4.6.6",
    "@types/prettier": "2.2.2",
    "@types/request": "2.48.5",
    "@types/rimraf": "3.0.0",
    "@types/shelljs": "0.8.8",
    "@types/xml2js": "0.4.8",
    "@types/yargs": "16.0.0",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "dotenv": "8.2.0",
    "eslint": "7.21.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "shx": "0.3.3",
    "ts-jest": "26.5.5"
  }
}
